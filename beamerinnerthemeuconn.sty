% Suppress all navigation symbols
\setbeamertemplate{navigation symbols}{}

% Use circle symbols for all bulleted lists
\setbeamertemplate{items}[circle]
\setbeamertemplate{sections/subsections in toc}[circle]

% Use oak leaf as QED symbol
\setbeamertemplate{qed symbol}{\oakleafbox}

% Title page (arguments currently ignored)
\defbeamertemplate*{title page}{uconn}[1][]
{
  \usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle\par
  \smallskip
  \usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par
  \bigskip
  \usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor\par
  \smallskip
  \usebeamerfont{institute}\usebeamercolor[fg]{institute}\insertinstitute\par
  \medskip
  \usebeamerfont{date}\usebeamercolor[fg]{date}\insertdate\par
}

% Part page (arguments currently ignored)
\defbeamertemplate*{part page}{uconn}[1][]
{
  \usebeamerfont{part name}\usebeamercolor[fg]{part name}\partname~\insertromanpartnumber\par
  \medskip
  \usebeamerfont{part title}\insertpart\par
}

% Section page (arguments currently ignored)
\defbeamertemplate*{section page}{uconn}[1][]
{
  \usebeamerfont{section name}\usebeamercolor[fg]{section name}\sectionname~\insertsectionnumber\par
  \smallskip
  \usebeamerfont{section title}\insertsection\par
}

% Subsection page (arguments currently ignored)
\defbeamertemplate*{subsection page}{uconn}[1][]
{
  \usebeamerfont{subsection name}\usebeamercolor[fg]{subsection name}\subsectionname~\insertsubsectionnumber\par
  \smallskip
  \usebeamerfont{subsection title}\insertsubsection\par
}

\mode<all>